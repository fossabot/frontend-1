parserOptions:
  sourceType: module
  ecmaVersion: 8
  ecmaFeatures:
    experimentalObjectRestSpread: true

plugins:
  - bem-xjst

env:
  browser: true
  node: true
  es6: true
  bem-xjst/bemhtml: true
  bem-xjst/bemtree: true

globals:
  # YModules
  modules: false

rules:
  curly: [error, multi-line]

extends: pedant
